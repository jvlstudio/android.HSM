<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/hsm_bg_c_blur"
    android:orientation="vertical"
    tools:context=".InformativoActivity" >

    <FrameLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10.5">
        
        <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
    	android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin">
        
        <TextView
        android:id="@+id/textoPagina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="PÃ¡gina de texto." />
    </ScrollView>
    </FrameLayout>
    
    <FrameLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2">
        
        <fragment 
				     android:id="@+id/footerFragment"
				     android:layout_width="match_parent"
				     android:layout_height="wrap_content"
				     class="br.ikomm.hsm.fragment.BannerFragment"/>
    </FrameLayout>
</LinearLayout>
